resource "null_resource" "excuitve-file-script" {
  count = var.env == "prod" ? 3 : 1
  provisioner "file" {
    source      = "script.sh"
    destination = "/tmp/script.sh"
    connection {
      type        = "ssh"
      user        = "ubuntu"
      private_key = file("mumbai.pem")
      #host = "${aws_instances.web-1.public_ip"}
      host = element(aws_instance.public-server.*.public_ip, count.index)
    }
  }
  provisioner "remote-exec" {
    inline = [
      "sudo chmod 777 /tmp/script.sh",
      "sudo /tmp/script.sh",
    ]
    connection {
      type        = "ssh"
      user        = "ubuntu"
      private_key = file("mumbai.pem")
      # host = "${aws_instances.web-1.public_ip}"
      host = element(aws_instance.public-server.*.public_ip, count.index)
    }
  }
}
