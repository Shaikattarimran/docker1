pipeline {
    environment {
        registry = "sreeharshav/devopsb22dev"
        registrycredential = 'dockerhub_id'
        devcontext = 'dev-swarm'
        prodcontext = 'prod-swarm'
        devnode = '52.90.210.59'
        prodnode = '3.227.19.70'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Building Dev Docker Branch') {
            when {
                GIT_BRANCH = 'origin/' + sh(returnstdout: true, script: 'git rev-parse --abbrev-ref HEAD').trim()
                return GIT_BRANCH == 'origin/DevopsB22-Dev'
            }
        }
        stage('Building our image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":v$BUILD_NUMBER"
                }
            }
        }
        stage('push Image To DockerHUB') {
            steps {
                script {
                    docker.withRegistry('',registrycredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('cleaning up') {
            steps {
                sh "docker rmi $registry:v$BUILD_NUMBER"
            }
        }
        stage('Deploying to Dev docker Docker Swarm') {
            steps {
                sh "docker context use $devcontext"
                sh "docker service rm testing1 || true"
                sh "docker service create --name testing1 -p 8100:80  $registry:v$BUILS_NUMBER"
            }
        }
        stage('verifying The Deployment') {
            steps {
                sh 'curl http://devnode:8100 || exit 1'
            }
        }
    }
}
